@model IngredientListViewModel

@{
    ViewBag.Title = "All Ingredients";
    Layout = "_AdminLayout";     //Administration Layout
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (Ingredient item in Model.Ingredients)
    {
        <tr>
            <td class="text-right">@item.IngredientID</td>
            <td>@item.Name</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="IngredientID" value="@item.IngredientID" />

                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-ingredientID="@item.IngredientID">
                        Edit
                    </a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Ingredient</a>
</div>

<div class="float-right" 
     page-model="@Model.PagingInfo"
     page-action="List"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-secondary"
     page-class-selected="btn-primary"></div>