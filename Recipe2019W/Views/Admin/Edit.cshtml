@model Recipe

@{
    ViewBag.Title = "All Recipes";
    Layout = "_AdminLayout";     //Administration Layout
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RecipeID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="Description"></label>
    </div>
    <div><span asp-validation-for="Description" class="text-danger"></span></div>
    <div >
        <textarea asp-for="Description" style="height:200px" class="col-12"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <div><span asp-validation-for="Type" class="text-danger"></span></div>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PrepTime"></label>
        <div><span asp-validation-for="PrepTime" class="text-danger"></span></div>
        <input asp-for="PrepTime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalTime"></label>
        <div><span asp-validation-for="TotalTime" class="text-danger"></span></div>
        <input asp-for="TotalTime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumOfServings"></label>
        <div><span asp-validation-for="NumOfServings" class="text-danger"></span></div>
        <input asp-for="NumOfServings" class="form-control" />
    </div>
    <div>
        @foreach (IngredientLine line in Model.Lines)
        {
        <tr>
            <th>Ingredient</th>
            <th>Amount</th>
            <th>Unit</th>
        </tr>
            <tr>
                
                <td>@line.Ingredient</td>
                <td>@line.Quantity</td>
                <td>@line.Unit</td>
                <td></td>
            </tr>
            <tr>
                <td colspan="3"></td>
                <td>
                    <button class="btn btn-primary" type="submit">Add Ingredient</button>
                </td>
            </tr>
        }
    </div>
    


    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>