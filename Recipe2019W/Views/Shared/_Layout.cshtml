<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Heart Recipes</title>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-fallback-href-exclude="**/*-reboot,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.min.css" />
</head>

<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">
            <a class="navbar-brand" href="#">HEART RECIPES</a>
        </div>
    </div>
    @{
        Html.RenderPartial("Navbar");
    }
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>